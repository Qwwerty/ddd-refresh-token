generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  refreshToken RefreshToken?

  @@map("users")
}

model RefreshToken {
  id        String @id @default(uuid())
  token     String
  expiresIn BigInt
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique

  @@map("refresh_token")
}
